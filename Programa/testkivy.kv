BoxLayout:
    orientation: 'vertical'
    Label:
        id: my_label
        text: 'Hello'
    Button:
        id: my_button
        text: 'Click me'
        on_press: my_label.text = 'Goodbye'
    TextImput:
        id: my_textinput
        text: 'Hello'
        on_text: my_label.text = my_textinput.text
